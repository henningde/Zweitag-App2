<% @posts.each do |post| %>
<li>
  <span class="content"><%= link_to post.title, post.link, :target => "_blank"%>
  </span>
      <span class="timestamp">
    Posted <%= time_ago_in_words(post.created_at) %> ago. from <%= post.user.email %>
  </span>
  <% if current_user?(post.user) %>
    <%= link_to "delete", post, method: :delete,
                                     data: { confirm: "You sure?" },
                                     title: post.title %>
  <% end %>

</ul>
<% end %>
